{
  "private": true,
  "name": "@acme/app-mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "lint": "eslint --ext js,ts,tsx .",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-post-install": "pnpm run -w build:mobile"
  },
  "dependencies": {
    "@tamagui/font-inter": "^1.78.0",
    "@tamagui/lucide-icons": "^1.78.0",
    "@tamagui/shorthands": "^1.78.0",
    "@tamagui/themes": "^1.78.0",
    "expo": "^49.0.10",
    "expo-barcode-scanner": "~12.5.3",
    "expo-constants": "~14.4.2",
    "expo-dev-client": "~2.4.8",
    "expo-linking": "~5.0.2",
    "expo-router": "^2.0.0",
    "expo-status-bar": "~1.6.0",
    "expo-updates": "~0.18.10",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.4",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-prompt": "^1.0.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "^14.0.0",
    "react-native-web": "~0.19.6",
    "tamagui": "^1.78.0"
  },
  "devDependencies": {
    "@acme/eslint-config": "*",
    "@acme/tba": "workspace:^1.0.0",
    "@babel/core": "^7.19.3",
    "@types/react": "~18.2.14",
    "@types/react-dom": "~18.0.11",
    "@types/react-native": "~0.70.6",
    "babel-preset-expo": "~9.5.0"
  },
  "eslintConfig": {
    "extends": "@acme/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
